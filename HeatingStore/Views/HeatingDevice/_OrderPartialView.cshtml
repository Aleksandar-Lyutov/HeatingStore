@model HeatingStore.Models.Order.OrderConfirmVM

<form asp-controller="Order" asp-action="Create" method="get">
    <div class="d-flex align-items-center">
        <label class="font-weight-boldm text-left mr-1"></label>
        <div class="mr-1">
            <input class="form-control" min="1" asp-for="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-order">Order</button>
    </div>
    <input type="hidden" asp-for="HeatingDeviceId" value="@Model.HeatingDeviceId" />
</form>
<style>
    .btn-order {
        background: linear-gradient(to bottom, #B30000, #FF4C4C);
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 5px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.3);
    }

    .btn-order:hover {
        background: linear-gradient(to bottom, #FF4C4C, #B30000);
    }
</style>